<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="il.co.hit.escapecovid">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cvd_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cvd_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.EscapeCovid">
        <activity android:name=".highScoreActivity"></activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".GameOverActivity" />
        <activity android:name=".homeActivity" />
        <activity android:name=".Instructions"/>
        <activity android:name=".splashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>